<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!----======== CSS ======== -->
    <link rel="stylesheet" href="/stylesheets/admin.css" />

    <!----===== Iconscout CSS ===== -->
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v4.0.0/css/line.css"
    />

    <!--<title>Admin Dashboard Panel</title>-->
  </head>
  <body>
    <nav>
      <div class="logo-name">
        <div class="logo-image">
          <!--<img src="images/logo.png" alt="">-->
        </div>

        <span class="logo_name">Rodhak.</span>
      </div>

      <div class="menu-items">
        <ul class="nav-links">
          <li>
            <a href="#">
              <i class="uil uil-estate"></i>
              <span class="link-name">Dashboard</span>
            </a>
          </li>
          <li>
            <a href="/api/v1/admin/verify">
              <i class="uil uil-files-landscapes"></i>
              <span class="link-name">Verifications</span>
            </a>
          </li>
          <li>
            <a href="#">
              <i class="uil uil-chart"></i>
              <span class="link-name">Analytics</span>
            </a>
          </li>

          <li>
            <a href="#">
              <i class="uil uil-comments"></i>
              <span class="link-name">Requests</span>
            </a>
          </li>
          <li>
            <a href="#">
              <i class="uil uil-share"></i>
              <span class="link-name">Edit</span>
            </a>
          </li>
        </ul>

        <ul class="logout-mode">
          <li>
            <a href="#">
              <i class="uil uil-signout"></i>
              <span class="link-name">Logout</span>
            </a>
          </li>

          <li class="mode">
            <a href="#">
              <i class="uil uil-moon"></i>
              <span class="link-name">Dark Mode</span>
            </a>

            <div class="mode-toggle">
              <span class="switch"></span>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <section class="dashboard">
      <div class="top">
        <i class="uil uil-bars sidebar-toggle"></i>

        <div class="search-box">
          <i class="uil uil-search"></i>
          <input type="text" placeholder="Search here..." />
        </div>

        <!--<img src="images/profile.jpg" alt="">-->
      </div>

      <div class="dash-content">
        <div class="overview">
          <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Dashboard</span>
          </div>

          <div class="boxes">
            <div class="box box1">
              <i class="uil uil-thumbs-up"></i>
              <span class="text">Total Registered Business</span>
              <span class="number">50</span>
            </div>
            <div class="box box2">
              <i class="uil uil-comments"></i>
              <span class="text">Registered Drivers</span>
              <span class="number">120</span>
            </div>
            <div class="box box3">
              <i class="uil uil-share"></i>
              <span class="text">Registered Vehicles</span>
              <span class="number">120</span>
            </div>
          </div>
        </div>

        <div class="activity">
          <div class="title">
            <i class="uil uil-clock-three"></i>
            <span class="text">Recent Activity</span>
          </div>
          <div class="activity-data">
            <div class="data names">
              <span class="data-title">Name</span>
            </div>
            <div class="data email">
              <span class="data-title">Email</span>
            </div>
            <div class="data joined">
              <span class="data-title"
                >&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                &nbsp; &nbsp;Phone</span
              >
            </div>
            <div class="data type">
              <span class="data-title"
                >&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Type</span
              >
            </div>
            <div class="data status">
              <span class="data-title">Status</span>
            </div>
          </div>
          <br />
          <% for (let owner of owners){%> <% if (owner.isVerified ==='true') {%>
          <div class="activity-data">
            <div class="data names">
              <span class="data-list"><%=owner.business%></span>
            </div>
            <div class="data email">
              <span class="data-list"><%=owner.email%></span>
            </div>
            <div class="data joined">
              <span class="data-list"><i>+91</i>&nbsp; <%=owner.phone%></span>
            </div>
            <div class="data type">
              <span class="data-list">Business</span>
            </div>
            <div class="data status">
              <span class="data-list">Verified</span>
            </div>
            <% for (let driver of drivers){%> <% if (driver.isVerified
            ==='true') {%>

            <div class="data names">
              <span class="data-list"><%=driver.username%></span>
            </div>
            <div class="data email">
              <span class="data-list"><%=driver.email%></span>
            </div>
            <div class="data joined">
              <span class="data-list"><i>+91</i>&nbsp; <%=driver.phone%></span>
            </div>
            <div class="data type">
              <span class="data-list">Driver</span>
            </div>
            <div class="data status">
              <span class="data-list">Verified</span>
            </div>
            <% }%> <% }%>
          </div>
          <br />
          <% }%> <% }%>
        </div>
      </div>
    </section>

    <script src="/javascripts/admin.js"></script>
  </body>
</html>
